<%= form_for @order_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :order_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :variant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :variant_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shopify_product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_product_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shopify_variant_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shopify_variant_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :unit_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :unit_price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_items_path, :class => 'btn' %>
  </div>
<% end %>
